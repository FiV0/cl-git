(in-package #:cl-git)

(defctype size :unsigned-long)
(defctype size-t :unsigned-long)

(defcstruct git-strings
  (strings :pointer)
  (count size))

(defcfun ("git_strarray_free" %git-strarray-free)
    :void
  (strings :pointer))

;;; Helper function for debugging
(defun null-or-nullpointer (obj)
  (or (not obj) 
      (typecase obj
	(git-pointer (null-pointer-p (pointer obj)))
	(t (null-pointer-p obj)))))

(defun getenv (name &optional default)
  #+CMU
  (let ((x (assoc name ext:*environment-list*
                  :test #'string=)))
    (if x (cdr x) default))
  #-CMU
  (or
   #+Allegro (sys:getenv name)
   #+CLISP (ext:getenv name)
   #+ECL (si:getenv name)
   #+SBCL (sb-unix::posix-getenv name)
   #+LISPWORKS (lispworks:environment-variable name)
   default))
